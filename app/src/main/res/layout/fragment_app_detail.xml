<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--App信息-->
            <ngyb.googleplay.view.AppDetailInfoView
                android:id="@+id/app_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--App安全-->
            <ngyb.googleplay.view.AppDetailSecurityView
                android:id="@+id/app_detail_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
            <!--App图片-->
            <ngyb.googleplay.view.AppDetailGalleryView
                android:id="@+id/app_detail_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--App描述-->
            <ngyb.googleplay.view.AppDetailDesView
                android:id="@+id/app_detail_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/view_detail_bottom_bar" />
</LinearLayout>